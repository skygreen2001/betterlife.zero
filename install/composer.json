{
  "name": "BB",
  "description": "a mini framework designed to compatiable with other php framework like drupal,thinkphp",
  "keywords": [
      "cms", "api", "php", "framework", "bb"
  ],
  "homepage": "https://github.com/skygreen2001/betterlife.core",
  "license": "GPL",
  "authors": [
      {
          "name": "skygreen2001",
          "email": "skygreen2001@gmail.com",
          "homepage": "http://blog.csdn.net/skygreen2001",
          "role": "Developer For Better"
      }
  ],
  "autoload": {
    "classmap" : [
      "../core/main/Initializer.php",
      "../init.php"
    ]
  },
  "config":{
      "secure-http": false
  },
  "repositories": [
    {
        "type":"package",
        "package": {
            "name": "pear/MDB2",
            "version": "2.4.1",
            "source": {
              "url": "https://github.com/pear/MDB2.git",
              "type": "git",
              "reference":"master"
            }
        }
    }
  ],
  "require": {
      "php": ">=5.2.0",
      "smarty/smarty"     : "^3.1",
      "phpoffice/phpexcel": "^1.8",
      "phpoffice/phpword" : "^0.13.0",
      "symfony/yaml"      : ">=2.0.4",
      "mustangostang/spyc": "^0.6.2",
      "fusonic/linq"      : "^2.0",
      "adodb/adodb-php"   : ">=5.19",
      "pear/MDB2"         : ">=2.0.0",
      "phpoffice/phpspreadsheet": "^1.2",
      "nelexa/zip"        : "^3.1"
  },
  "require-dev": {
    "pagon/composer-packer": "0.1.x"
  },
  "_comment": "pagon/composer-packer: Packer to build tar.gz for composer project."
}
