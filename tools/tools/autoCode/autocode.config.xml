<?xml version="1.0" encoding="utf-8"?>
<classes>
	<class name="Blog">
		<conditions>
			<condition>blog_name</condition>
			<condition>content</condition>             
		</conditions>
		<relationShows> 
			<show local_key="user_id" relation_class="User">username</show> 
		</relationShows> 
		<has_many>
			<class name="Comment">comments<class>
		</has_many>
		<belong_has_one>  
			<class name="User">user</class>
		</belong_has_one> 
	</class>   
	<class name="Comment">         
		<conditions>
			<condition>comment</condition>  
		</conditions> 
		<relationShows> 
			<show local_key="user_id" relation_class="User">username</show> 
			<show local_key="blog_id" relation_class="Blog">blog_name</show> 
		</relationShows> 
		<belong_has_one>  
			<class name="User">user</class>
			<class name="Blog">blog</class>
		</belong_has_one> 
	
	</class>       
</classes>
